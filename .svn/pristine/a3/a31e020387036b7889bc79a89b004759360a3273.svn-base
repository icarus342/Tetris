package zelda;

import java.awt.Image;

import javax.swing.ImageIcon;


public enum Guard {
    
    /** Sound for when a piece freezes in place. */
    GUARD_1("./images/guard_1.gif"),
    /** Sound for when a row(s) of blocks is cleared. */
    GUARD_2("./images/guard_2.gif"),
    /** Sound for when an error in the menu occurs. */
    GUARD_3("./images/guard_3.gif"),
    /** Sound for when an error in the menu occurs. */
    GUARD_4("./images/guard_4.gif");
   
    private Image myImage;
    
    Guard(final String theImagePath) {
        myImage = new ImageIcon(theImagePath).getImage();
    }
    
    
    public Image getImage() {
        return myImage;
    }
    
    
    public Guard advance() {
        Guard result = GUARD_1;

        switch (this) {
            case GUARD_1:
                result = GUARD_2;
                break;

            case GUARD_2:
                result = GUARD_3;
                break;

            case GUARD_3:
                result = GUARD_4;
                break;
                
            case GUARD_4:
                result = GUARD_1;

            default:
        }

        return result;
    } 
    
}